<section class="w-[100%] border h-[100%] overflow-y-hidden">
    <% if notice.present? %>
      <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
    <% end %>
    
    <div class="flex justify-between">   
        <%= render partial: 'shared/url_sidenav', class: "flex-[0.2] h-[100%]", locals: {data: @gumtree_scrapes, url: @url } %>

        <div class="flex-row justify-between h-[100%] flex-[0.98]">
            <div class="text-left mt-3 mb-5 text-[14px] flex justify-between w-[95%]">
                <div>
                    <p><span class="text-bold text-[13px]">Scraped Url:</span> <a class="text-blue-500 underline text-[13px]" target="_blank" href="<%= @url %>" ><%= @gumtree_scrapes[0]['link'] %></a></p>
                    <p>
                        <span class="text-bold text-[13px]">Listings: <%= @gumtree_scrapes.count %></span>
                        <%= render partial: 'shared/listing_count', locals: { scraped_data: @gumtree_scrapes }  %>
                    </p>
                </div>

                <div class="flex align-top items-start">
                    <%= render partial: 'shared/upload_items_button', class: '' %>
                </div>
            </div>
            
            <%= render partial: 'shared/scraped_data', class: 'mx-auto', locals: { scraped_data: @gumtree_scrapes } %>
        </div>
    </div>
</section> 



