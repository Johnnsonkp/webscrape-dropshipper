<div id="<%= dom_id gumtree_scrape %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Url:</strong>
    <%= gumtree_scrape.url %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Title:</strong>
    <%= gumtree_scrape.title %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Description:</strong>
    <%= gumtree_scrape.description %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Link:</strong>
    <%= gumtree_scrape.link %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Link src:</strong>
    <%= gumtree_scrape.link_src %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Price:</strong>
    <%= gumtree_scrape.price %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Location:</strong>
    <%= gumtree_scrape.location %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Website:</strong>
    <%= gumtree_scrape.website %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this gumtree scrape", gumtree_scrape, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to "Edit this gumtree scrape", edit_gumtree_scrape_path(gumtree_scrape), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
